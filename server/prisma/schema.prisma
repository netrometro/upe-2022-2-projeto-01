// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id Int @id @default(autoincrement())
  email String @unique
  senha String 
  nome String
  apelido String
  avatar String
  eventos Evento[]
}

model Evento {
  id Int @id @default(autoincrement())
  tag String @unique
  titulo String
  descricao String
  dataEvento String
  usuario Usuario @relation(fields: [usuarioId], references: id)
  usuarioId Int
}


